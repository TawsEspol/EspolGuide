<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/contenedor_mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <org.osmdroid.views.MapView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />
    </LinearLayout>

    <!--Contenedor de barra de busqueda y sugerencias-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/barra_busqueda_pois"
        >
        <!--Ingreso de texto en barra de busqueda-->
        <EditText
            android:id="@+id/search"
            style="@style/input_barra_pois"
            >
            <requestFocus />
        </EditText>

        <!--Lista de pois sugeridos en barra de busqueda-->
        <ListView
            android:id="@+id/listview"
            style="@style/lista_sugerencias_barra"
            />
        <Button
            android:id="@+id/boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Bloque">
        </Button>
    </LinearLayout>

    <!--Layout de la informacion del POI-->
    <LinearLayout android:id="@+id/overlay"
        android:layout_marginTop="45dip"
        android:layout_marginRight="35dip"
        android:layout_marginLeft="35dip"
        android:layout_marginBottom="30dip"


        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#99000000"
        android:clickable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/flag"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/fiec" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</FrameLayout>