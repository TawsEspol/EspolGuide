<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/first</item>
        <item name="colorPrimaryDark">@color/second</item>
        <item name="colorAccent">@color/third</item>
    </style>


    <style name="barra_busqueda_pois" parent="AppTheme" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">55dip</item>
        <item name="android:layout_marginRight">25dip</item>
        <item name="android:layout_marginLeft">25dip</item>
        <item name="android:layout_gravity">left|top</item>

        <item name="android:background">@drawable/shape_searchview_poi</item>
    </style>

    <style name="auth_edit_text" parent="AppTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/first</item>
        <item name="android:textColorHint">@color/third</item>
        <item name="android:backgroundTint">@color/second</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">left|top</item>
    </style>

    <style name="auth_user" parent="auth_edit_text">
    </style>

    <style name="auth_pass" parent="auth_edit_text">
    </style>

    <style name="login_btn" parent="AppTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:background">@drawable/login_button</item>
    </style>

    <style name="OptionButton" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:drawableLeft">@drawable/bonuspack_bubble</item>
        <item name="android:layout_marginTop">55dip</item>
        <item name="android:layout_marginRight">25dip</item>
        <item name="android:layout_marginLeft">25dip</item>
        <item name="android:layout_gravity">left|top</item>
    </style>

    <style name="barra_rutas_pois" parent="AppTheme" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:background">@drawable/shape_searchview_poi</item>
        <item name="android:textColor">@color/second</item>
    </style>


    <style name="nombre_principal_lista" parent="AppTheme">
        <item name="android:textColor">@color/first</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nombre_alternativo_lista" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/second</item>
        <item name="android:layout_below">@id/name</item>
    </style>

    <style name="lista_sugerencias_barra" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--Edit text de la barra de busqueda-->
    <style name="input_barra_pois" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">15dip</item>
        <item name="android:hint">@string/search_poi_hint</item>
        <item name="android:textColor">@color/second</item>
        <item name="android:textColorHint">@color/third</item>
    </style>


    <style name="data" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:layout_marginLeft">70dip</item>
        <item name="android:layout_marginRight">70dip</item>
        <item name="android:textSize">20dip</item>
        <item name="android:hint">@string/search_poi_hint</item>
        <item name="android:textColor">@color/second</item>
        <item name="android:textStyle"></item>
        <item name="android:gravity">center</item>
        <!--item name="android:background">@drawable/shape_data</item-->
    </style>

    <style name="property" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:layout_marginLeft">70dip</item>
        <item name="android:layout_marginRight">70dip</item>
        <item name="android:textSize">10dip</item>
        <item name="android:hint">@string/search_poi_hint</item>
        <item name="android:textColor">@color/first</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">right</item>
    </style>


</resources>

